{
	"formatter": {
	  "enabled": true,
	  "formatWithErrors": false,
	  "ignore": ["**/_tests__/**"],
	  "attributePosition": "auto",
	  "indentStyle": "space",
	  "indentWidth": 2,
	  "lineEnding": "lf",
	  "lineWidth": 120
	},
	"javascript": {
	  "formatter": {
		"arrowParentheses": "always",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"jsxQuoteStyle": "double",
		"quoteProperties": "asNeeded",
		"semicolons": "always",
		"trailingComma": "all"
	  }
	},
	"json": {
	  "formatter": {
		"trailingCommas": "none"
	  }
	}
  }
  