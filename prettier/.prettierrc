{
  "trailingComma":             "es5",
  "semi":                      false,
  "singleQuote":               true,
  "jsxSingleQuote":            true,
  "arrowParens":               "always",
  "printWidth":                80,
  "singleAttributePerLine":    true,
  "importOrder":               [
    "(react|expo)",
    "<THIRD_PARTY_MODULES>",
    "^[./]"
  ],
  "importOrderSeparation":     true,
  "importOrderSortSpecifiers": true,
  "plugins":                   ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}
